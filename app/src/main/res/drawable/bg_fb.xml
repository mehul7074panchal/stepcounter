<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <!--BackGround Color-->
            <solid android:color="#BF3B5998" />


            <!--             Border click Color  -->
            <stroke android:width="1dp" android:color="#333B5998" />
            <corners android:radius="1000dp" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="#3B5998" android:shape="rectangle" android:startColor="#3B5998" />

            <!--Border color  -->
            <stroke android:width="1.5dp" android:color="#3B5998" android:shape="rectangle" />
            <!-- Here is the corner radius -->
            <corners android:radius="1000dip" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />

        </shape>
    </item>
</selector>